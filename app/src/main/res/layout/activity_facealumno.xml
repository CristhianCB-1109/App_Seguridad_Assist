<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTituloAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del Alumno"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:layout_marginBottom="20dp"/>

    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/qrImagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/carnetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="20dp"
        android:layout_margin="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:backgroundTint="#FFFFFF"
        android:foreground="?attr/selectableItemBackgroundBorderless">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:layout_marginBottom="14dp"/>

        <TextView
            android:id="@+id/tvNombreAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCodigoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvCarreraAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/tvdniAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/tvtelefonoAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#424242"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:elevation="4dp"/>

</LinearLayout>
