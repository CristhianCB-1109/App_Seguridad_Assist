<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvBienvenidaSeguridad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menu De Seguridad"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E3A8A"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenidaSeguridad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnRegistrarAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar A Un Alumno"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Historial De Alumno"
            android:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnInvitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar A Un Invitado"
            android:backgroundTint="#F59E0B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnHistorialInvitado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Historial De Un Invitado"
            android:backgroundTint="#8B5CF6"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btnCerrarSesionSeguridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar SesiÃ³n"
            android:backgroundTint="#EF4444"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

