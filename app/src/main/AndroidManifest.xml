<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guardia"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Guardia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="Iniciar Sesión"
            android:theme="@style/Theme.Guardia" />

        <activity
            android:name=".RegisterActivity"
            android:label="Crear Cuenta"
            android:theme="@style/Theme.Guardia" />

        <activity
            android:name=".GestionActivity"
            android:label="Gestión"
            android:theme="@style/Theme.Guardia" />

        <activity
            android:name=".FaceAlumnoActivity"
            android:label="Carnet Alumno"
            android:theme="@style/Theme.Guardia" />

        <activity
            android:name=".SeguridadActivity"
            android:label="Seguridad"
            android:theme="@style/Theme.Guardia" />



    </application>

</manifest>